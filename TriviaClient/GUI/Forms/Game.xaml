<Page x:Class="GUI.Forms.Game"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:GUI.Forms"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Game" ShowsNavigationUI="True"
      HorizontalAlignment="Stretch"
VerticalAlignment="Stretch"
      >





    <Viewbox>


        <Grid Height="450" Width="800">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0*"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Border
                Height="400"
                Background="#FF0B0C10"
                CornerRadius="6" Grid.ColumnSpan="2" Margin="200,25,200,25">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="15"
                        Direction ="-90" 
                        RenderingBias ="Quality" 
                        ShadowDepth ="2" 
                        Color ="Gray" />
                </Border.Effect>
                <StackPanel Orientation="Vertical"
                    Margin="20">
                    <Grid Height="300">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <TextBlock x:Name="QuestionText" FontFamily="pack://application:,,,/data/#Cyber Alert" FontSize="20" HorizontalAlignment="Center" TextWrapping="Wrap" Text="question" VerticalAlignment="Top" Width="360" Height="90" Foreground="#FF45A29E" Grid.RowSpan="2"/>

                        <TextBlock x:Name="TimerText" FontFamily="pack://application:,,,/data/#Cyber Alert" FontSize="24" HorizontalAlignment="Left" TextWrapping="Wrap" VerticalAlignment="Center" Width="95" Height="50" Grid.Row="2" Foreground="#FFFF2F7C" Margin="10,0,0,0" Text="time"/>
                        <TextBlock x:Name="statsText" FontFamily="pack://application:,,,/data/#Cyber Alert" FontSize="18" HorizontalAlignment="Left" TextWrapping="Wrap" VerticalAlignment="Center" Width="240" Height="50" Grid.Row="2" Margin="110,0,0,0" Foreground="#FFFF2F7C" Text="stats"/>

                        <Button x:Name="AnswerBtn1" 
                            Content="answer1" 
                            Foreground="White"
                            Background="#FF45A29E"
                            FontFamily="pack://application:,,,/data/#Cyber Alert"                            
                            Click="AnswerBtn_Click" Margin="0,0,0,12" Grid.Row="3">
                            <Button.Style>
                                <Style TargetType="{x:Type Button}">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="{x:Type Button}">
                                                <Border x:Name="LoginBorder" Background="{TemplateBinding Background}"
                                                    CornerRadius="16">
                                                    <ContentPresenter HorizontalAlignment="Center" 
                                                        VerticalAlignment="Center"/>
                                                </Border>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter Property="Background" Value="AliceBlue" TargetName="LoginBorder"  />
                                                        <Setter Property="TextBlock.Foreground" Value="Black"  TargetName="LoginBorder" />
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </Button.Style>
                        </Button>

                        <Button x:Name="AnswerBtn2" 
                            Content="answer2" 
                            Foreground="White"
                            Background="#FF45A29E"
                            FontFamily="pack://application:,,,/data/#Cyber Alert"
                            Click="AnswerBtn_Click" Margin="0,0,0,12" Grid.Row="4">
                            <Button.Style>
                                <Style TargetType="{x:Type Button}">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="{x:Type Button}">
                                                <Border x:Name="LoginBorder" Background="{TemplateBinding Background}"
                                                    CornerRadius="16">
                                                    <ContentPresenter HorizontalAlignment="Center" 
                                                        VerticalAlignment="Center"/>
                                                </Border>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter Property="Background" Value="AliceBlue" TargetName="LoginBorder"  />
                                                        <Setter Property="TextBlock.Foreground" Value="Black"  TargetName="LoginBorder" />
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </Button.Style>
                        </Button>
                        <Button x:Name="AnswerBtn3" 
                            Content="answer3" 
                            Foreground="White"
                            Background="#FF45A29E"
                            FontFamily="pack://application:,,,/data/#Cyber Alert"
                            Click="AnswerBtn_Click" Margin="0,0,0,12" Grid.Row="5">
                            <Button.Style>
                                <Style TargetType="{x:Type Button}">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="{x:Type Button}">
                                                <Border x:Name="LoginBorder" Background="{TemplateBinding Background}"
                                                    CornerRadius="16">
                                                    <ContentPresenter HorizontalAlignment="Center" 
                                                        VerticalAlignment="Center"/>
                                                </Border>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter Property="Background" Value="AliceBlue" TargetName="LoginBorder"  />
                                                        <Setter Property="TextBlock.Foreground" Value="Black"  TargetName="LoginBorder" />
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </Button.Style>
                        </Button>
                        <Button x:Name="AnswerBtn4" 
                            Content="answer4" 
                            Foreground="White"
                            Background="#FF45A29E"
                            FontFamily="pack://application:,,,/data/#Cyber Alert"
                            Click="AnswerBtn_Click" Margin="0,51,0,-39" Grid.Row="5">
                            <Button.Style>
                                <Style TargetType="{x:Type Button}">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="{x:Type Button}">
                                                <Border x:Name="LoginBorder" Background="{TemplateBinding Background}"
                                                    CornerRadius="16">
                                                    <ContentPresenter HorizontalAlignment="Center" 
                                                        VerticalAlignment="Center"/>
                                                </Border>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter Property="Background" Value="AliceBlue" TargetName="LoginBorder"  />
                                                        <Setter Property="TextBlock.Foreground" Value="Black"  TargetName="LoginBorder" />
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </Button.Style>
                        </Button>




                    </Grid>
                </StackPanel>
            </Border>
        </Grid>
    </Viewbox>
</Page>
