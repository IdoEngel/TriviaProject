<Page x:Class="GUI.Forms.Login"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:GUI.Forms"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Login" ShowsNavigationUI="True"
      HorizontalAlignment="Stretch"
VerticalAlignment="Stretch"
      >




    <Viewbox>


        <Grid Height="450" Width="800">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0*"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <Button x:Name="GoBackBtn" 
Content="go back" 
Foreground="White"
Background="#FF0B0C10"
FontFamily="pack://application:,,,/data/#Cyber Alert"                            
Click="GoBackBtn_Click" Margin="10,10,720,393" RenderTransformOrigin="0.5,0.5" Grid.ColumnSpan="2">
                <Button.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform/>
                        <RotateTransform Angle="0.098"/>
                        <TranslateTransform/>
                    </TransformGroup>
                </Button.RenderTransform>
                <Button.Style>
                    <Style TargetType="{x:Type Button}">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="{x:Type Button}">
                                    <Border x:Name="LoginBorder" Background="{TemplateBinding Background}"
                        CornerRadius="16">
                                        <ContentPresenter HorizontalAlignment="Center" 
                            VerticalAlignment="Center"/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="AliceBlue" TargetName="LoginBorder"  />
                                            <Setter Property="TextBlock.Foreground" Value="Black"  TargetName="LoginBorder" />
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </Button.Style>
            </Button>
            
            
            
            <Border
                Height="400"
                Background="#0B0C10"
                CornerRadius="6" Grid.ColumnSpan="2" Margin="245,25,245,25">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="15"
                        Direction ="-90" 
                        RenderingBias ="Quality" 
                        ShadowDepth ="2" 
                        Color ="Gray" />
                </Border.Effect>
                <StackPanel Orientation="Vertical"
                    Margin="20">
                    <Border Height="53" Width="270">
                        <Border.Effect>
                            <DropShadowEffect Color="#FF2F7C" BlurRadius="20" ShadowDepth="0"/>
                        </Border.Effect>
                        <TextBlock FontFamily="pack://application:,,,/data/#Cyber Alert" Text="Login" 
                            FontSize="45"
                            HorizontalAlignment="Center"
                            FontWeight="Bold"
                            Padding="10" Foreground="#FFFF2F7C"
                            Margin="0,0,0,-42"
                   />
                    </Border>
                    <Grid Height="300">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <Button x:Name="LoginBtn" 
                            Content="Login" 
                            FontFamily="pack://application:,,,/data/#Cyber Alert"
                            Foreground="White"
                            Background="#FF45A29E"
                            Margin="5,5,5,5"
                            
                            Click="LoginBtn_Click" Grid.Row="3">
                            <Button.Style>
                                <Style TargetType="{x:Type Button}">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="{x:Type Button}">
                                                <Border x:Name="LoginBorder" Background="{TemplateBinding Background}"
                                                    CornerRadius="16">
                                                    <ContentPresenter HorizontalAlignment="Center" 
                                                        VerticalAlignment="Center"/>
                                                </Border>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter Property="Background" Value="AliceBlue" TargetName="LoginBorder"  />
                                                        <Setter Property="TextBlock.Foreground" Value="Black"  TargetName="LoginBorder" />
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </Button.Style>
                        </Button>
                        <Label FontFamily="pack://application:,,,/data/#Cyber Alert" Content="Password:" Margin="-5,25,161,25" Grid.RowSpan="2" Grid.Row="1" FontSize="16" Foreground="#FF45A29E"/>
                        <TextBox x:Name="username" TextWrapping="Wrap" Text="" Margin="114,25,5,0" Height="25"/>
                        <Label FontFamily="pack://application:,,,/data/#Cyber Alert" Content="username:" Margin="-5,25,161,25" Grid.RowSpan="2" FontSize="16" Foreground="#FF45A29E"/>
                        <PasswordBox x:Name="Password_field" Margin="114,25,5,0" Grid.Row="1"
                            MaxLength="16" PasswordChanged="Password_field_PasswordChanged" Password=""/>
                        <TextBlock x:Name="error" HorizontalAlignment="Center" TextWrapping="Wrap" Text="" Margin="0,12,0,8" Grid.Row="2" Width="250" Foreground="#FFFF2F7C"/>
                    </Grid>
                </StackPanel>
            </Border>
        </Grid>
    </Viewbox>
</Page>
