<Page x:Class="GUI.Forms.Room"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:GUI.Forms"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Room" ShowsNavigationUI="True"
      HorizontalAlignment="Stretch"
VerticalAlignment="Stretch"
      >



    <Viewbox>

        <Grid Height="450" Width="800">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0*"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Button x:Name="GoBackBtn" 
Content="go back" 
Foreground="White"
Background="#FF0B0C10"
FontFamily="pack://application:,,,/data/#Cyber Alert"                            
Click="GoBackBtn_Click" Margin="10,10,720,393" RenderTransformOrigin="0.5,0.5" Grid.ColumnSpan="2">
                <Button.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform/>
                        <RotateTransform Angle="0.098"/>
                        <TranslateTransform/>
                    </TransformGroup>
                </Button.RenderTransform>
                <Button.Style>
                    <Style TargetType="{x:Type Button}">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="{x:Type Button}">
                                    <Border x:Name="LoginBorder" Background="{TemplateBinding Background}"
                        CornerRadius="16">
                                        <ContentPresenter HorizontalAlignment="Center" 
                            VerticalAlignment="Center"/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="AliceBlue" TargetName="LoginBorder"  />
                                            <Setter Property="TextBlock.Foreground" Value="Black"  TargetName="LoginBorder" />
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </Button.Style>
            </Button>


            <Border
                Height="400"
                Background="#FF0B0C10"
                CornerRadius="6" Grid.ColumnSpan="2" Margin="125,25,125,25">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="15"
                        Direction ="-90" 
                        RenderingBias ="Quality" 
                        ShadowDepth ="2" 
                        Color ="Gray" />
                </Border.Effect>
                <StackPanel Orientation="Vertical"
                    Margin="20">
                    <Border Height="53" Width="270">
                        <Border.Effect>
                            <DropShadowEffect Color="#FF2F7C" BlurRadius="20" ShadowDepth="0"/>
                        </Border.Effect>
                        <TextBlock x:Name="roomname" Text="room" 
                            Foreground="#FFFF2F7C"
                            FontFamily="pack://application:,,,/data/#Cyber Alert"
                            FontSize="40"
                            HorizontalAlignment="Center"
                            FontWeight="Bold"
                            Padding="10" Margin="0,-4,0,-25"
               />
                    </Border>
                    <Grid Height="300">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="8*"/>
                            <ColumnDefinition Width="7*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <TextBlock FontFamily="pack://application:,,,/data/#Cyber Alert" FontSize="20" TextWrapping="Wrap" Text="max num of players:" Margin="0,10,201,40" Grid.RowSpan="2" Foreground="#FF45A29E" Grid.ColumnSpan="2"/>
                        <TextBlock FontFamily="pack://application:,,,/data/#Cyber Alert" FontSize="20" TextWrapping="Wrap" Text="time per question" Margin="0,5,234,45" Grid.Row="3" Grid.RowSpan="2" Foreground="#FF45A29E" Grid.ColumnSpan="2"/>
                        <ListBox x:Name="players" d:ItemsSource="{d:SampleData ItemCount=5}" RenderTransformOrigin="0.5,0.5" Margin="70,0,10,0" Grid.RowSpan="4" Foreground="#FF45A29E" FontFamily="Cyber Alert" FontStyle="Normal" Grid.Column="1">
                            <ListBox.RenderTransform>
                                <TransformGroup>
                                    <ScaleTransform ScaleY="1"/>
                                    <SkewTransform/>
                                    <RotateTransform/>
                                    <TranslateTransform/>
                                </TransformGroup>
                            </ListBox.RenderTransform>
                        </ListBox>
                        <Button x:Name="startBtn" 
                            Content="start" 
                            Foreground="White"
                            Background="#FF45A29E"
                            FontFamily="pack://application:,,,/data/#Cyber Alert"
                            Margin="5,5,5,5"
                            Click="startBtn_Click" Grid.Row="4" Grid.ColumnSpan="2">
                            <Button.Style>
                                <Style TargetType="{x:Type Button}">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="{x:Type Button}">
                                                <Border x:Name="LoginBorder" Background="{TemplateBinding Background}"
                                                    CornerRadius="16">
                                                    <ContentPresenter HorizontalAlignment="Center" 
                                                        VerticalAlignment="Center"/>
                                                </Border>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter Property="Background" Value="AliceBlue" TargetName="LoginBorder"  />
                                                        <Setter Property="TextBlock.Foreground" Value="Black"  TargetName="LoginBorder" />
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </Button.Style>
                        </Button>

                        <Button x:Name="closeBtn" 
    Content="close room :(" 
    Foreground="White"
    Background="#FFFF2F7C"
    FontFamily="pack://application:,,,/data/#Cyber Alert"
    Margin="174,14,174,14"
    Click="closeBtn_Click" Grid.Row="5" Grid.ColumnSpan="2">
                            <Button.Style>
                                <Style TargetType="{x:Type Button}">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="{x:Type Button}">
                                                <Border x:Name="LoginBorder" Background="{TemplateBinding Background}"
                            CornerRadius="16">
                                                    <ContentPresenter HorizontalAlignment="Center" 
                                VerticalAlignment="Center"/>
                                                </Border>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter Property="Background" Value="AliceBlue" TargetName="LoginBorder"  />
                                                        <Setter Property="TextBlock.Foreground" Value="Black"  TargetName="LoginBorder" />
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </Button.Style>
                        </Button>

                        <TextBlock FontFamily="pack://application:,,,/data/#Cyber Alert" FontSize="20" TextWrapping="Wrap" Text="num of questions:" Margin="0,32,17,22" Grid.Row="1" Grid.RowSpan="2" Foreground="#FF45A29E"/>
                        <Label x:Name="timePerQ" FontFamily="pack://application:,,,/data/#Cyber Alert" Content="Label" FontSize="18" Margin="271,2,126,48" Grid.Row="3" Grid.RowSpan="2" Foreground="#FF45A29E" Grid.ColumnSpan="2"/>
                        <Label x:Name="numOfQ" FontFamily="pack://application:,,,/data/#Cyber Alert" Content="Label" FontSize="18" Margin="271,28,147,22" Grid.Row="1" Grid.RowSpan="2" Foreground="#FF45A29E" Grid.ColumnSpan="2"/>
                        <Label x:Name="maxPlayersLabel" FontFamily="pack://application:,,,/data/#Cyber Alert" Content="Label" FontSize="18" Margin="271,7,127,47" Grid.RowSpan="2" Foreground="#FF45A29E" Grid.ColumnSpan="2"/>
                    </Grid>
                </StackPanel>
            </Border>
        </Grid>
    </Viewbox>
</Page>
