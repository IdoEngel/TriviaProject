<Page x:Class="GUI.Forms.Sign"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:GUI.Forms"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800" ShowsNavigationUI="True"
      Title="Sign"
      HorizontalAlignment="Stretch"
      VerticalAlignment="Stretch"
      >
    


    
    <Viewbox>
        <Grid Height="450" Width="800">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0*"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>


            <Border Width="300"
                Height="400"
                Background="#FF0B0C10"
                CornerRadius="6" Grid.ColumnSpan="2" Margin="250,25,250,25">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="15"
                        Direction ="-90" 
                        RenderingBias ="Quality" 
                        ShadowDepth ="2" 
                        Color ="Gray" />
                </Border.Effect>
                <StackPanel Orientation="Vertical"
                    Margin="20">
                    <Border Height="64" Width="270">
                        <Border.Effect>
                            <DropShadowEffect Color="#FF2F7C" BlurRadius="20" ShadowDepth="0"/>
                        </Border.Effect>
                        <TextBlock Text="trivia" 
                            Foreground="#FFFF2F7C"
                            FontFamily="pack://application:,,,/data/#Cyber Alert"
                            FontSize="50"
                            HorizontalAlignment="Center"
                            FontWeight="Bold"
                            Padding="10" Margin="0,0,0,-42"
               />
                    </Border>
                    <Grid Height="300">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <Button
                            x:Name="SignUpBtn" Margin="5,25,5,35" Foreground="White" Content="Sign Up" Click="SignUpBtn_Click" Background="#FF45A29E" Grid.Row="2" Grid.RowSpan="2">
                            <Button.Style
                    >
                                <Style
                                    TargetType="{x:Type Button}">
                                    <Setter
                                        Property="Template">
                                        <Setter.Value
                    >
                                            <ControlTemplate
                                                TargetType="{x:Type Button}">
                                                <Border
                                                    x:Name="LoginBorder" CornerRadius="16" Background="{TemplateBinding Background}">
                                                    <ContentPresenter
                                                        HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                </Border>
                                                <ControlTemplate.Triggers
                    >
                                                    <Trigger
                                                        Property="IsMouseOver" Value="True">
                                                        <Setter
                                                            Property="Background" TargetName="LoginBorder" Value="AliceBlue"/>
                                                        <Setter
                                                            Property="TextBlock.Foreground" TargetName="LoginBorder" Value="Black"/>
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </Button.Style>
                        </Button>
                        <Button x:Name="LoginBtn" 
                            Content="Login" 
                            Foreground="White"
                            Background="#FF45A29E"
                            Margin="5,5,5,5"
                            Click="LoginBtn_Click" Grid.Row="4">
                            <Button.Style>
                                <Style TargetType="{x:Type Button}">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="{x:Type Button}">
                                                <Border x:Name="LoginBorder" Background="{TemplateBinding Background}"
                                                    CornerRadius="16">
                                                    <ContentPresenter HorizontalAlignment="Center" 
                                                        VerticalAlignment="Center"/>
                                                </Border>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter Property="Background" Value="AliceBlue" TargetName="LoginBorder"  />
                                                        <Setter Property="TextBlock.Foreground" Value="Black"  TargetName="LoginBorder" />
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </Button.Style>
                        </Button>
                        <Label FontFamily="pack://application:,,,/data/#Cyber Alert" Content="welcome to trivia ! " Margin="44,11,54,14" Foreground="#FF45A29E"/>
                        <Label FontFamily="pack://application:,,,/data/#Cyber Alert" Content="pls login or signup if u dont have a account" Margin="8,10,8,0" Grid.Row="1" Foreground="#FF45A29E"/>
                    </Grid>
                </StackPanel>
            </Border>
        </Grid>
    </Viewbox>
</Page>
