<Page x:Class="GUI.Forms.SignUp"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:GUI.Forms"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      
      HorizontalAlignment="Stretch"
      VerticalAlignment="Stretch"
      
      Title="SignUp"  ShowsNavigationUI="True">



    <Viewbox>

        <Grid x:Name="mainGrid" Height="450" Width="800">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0*"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <Button x:Name="GoBackBtn" 
Content="go back" 
Foreground="White"
Background="#FF0B0C10"
FontFamily="pack://application:,,,/data/#Cyber Alert"                            
Click="GoBackBtn_Click" Margin="10,10,720,393" RenderTransformOrigin="0.5,0.5" Grid.ColumnSpan="2">
                <Button.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform/>
                        <RotateTransform Angle="0.098"/>
                        <TranslateTransform/>
                    </TransformGroup>
                </Button.RenderTransform>
                <Button.Style>
                    <Style TargetType="{x:Type Button}">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="{x:Type Button}">
                                    <Border x:Name="LoginBorder" Background="{TemplateBinding Background}"
                        CornerRadius="16">
                                        <ContentPresenter HorizontalAlignment="Center" 
                            VerticalAlignment="Center"/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="AliceBlue" TargetName="LoginBorder"  />
                                            <Setter Property="TextBlock.Foreground" Value="Black"  TargetName="LoginBorder" />
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </Button.Style>
            </Button>


            <Border
                Height="400"
                Background="#0B0C10"
                CornerRadius="6" Grid.ColumnSpan="2" Margin="200,25,200,25">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="15"
                        Direction ="-90" 
                        RenderingBias ="Quality" 
                        ShadowDepth ="2" 
                        Color ="Gray" />
                </Border.Effect>
                <StackPanel Orientation="Vertical"
                    Margin="20">
                    <Border Height="53" Width="270">
                        <Border.Effect>
                            <DropShadowEffect Color="#FF2F7C" BlurRadius="20" ShadowDepth="0"/>
                        </Border.Effect>
                        <TextBlock Foreground="#FFFF2F7C" Text="Sign up" 
                            FontFamily="pack://application:,,,/data/#Cyber Alert"
                            FontSize="40"
                            HorizontalAlignment="Center"
                            FontWeight="Bold"
                            Padding="10" Margin="0,0,0,-11"
               />
                    </Border>
                    <Grid Height="300">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="32*"/>
                            <ColumnDefinition Width="13*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="25*"/>
                            <RowDefinition Height="25*"/>
                            <RowDefinition Height="25*"/>
                            <RowDefinition Height="11*"/>
                            <RowDefinition Height="14*"/>
                            <RowDefinition Height="25*"/>
                            <RowDefinition Height="25*"/>
                        </Grid.RowDefinitions>
                        <Button x:Name="SignUpBtn" 
                            Content="Sign Up" 
                            Foreground="White"
                            Background="#FF45A29E"
                            Margin="0,5,10,5"
                            FontFamily="pack://application:,,,/data/#Cyber Alert"
                            Click="SignUpBtn_Click" Grid.Row="5" Grid.ColumnSpan="2">
                            <Button.Style>
                                <Style TargetType="{x:Type Button}">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="{x:Type Button}">
                                                <Border x:Name="LoginBorder" Background="{TemplateBinding Background}"
                                                    CornerRadius="16">
                                                    <ContentPresenter HorizontalAlignment="Center" 
                                                        VerticalAlignment="Center"/>
                                                </Border>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter Property="Background" Value="AliceBlue" TargetName="LoginBorder"  />
                                                        <Setter Property="TextBlock.Foreground" Value="Black"  TargetName="LoginBorder" />
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </Button.Style>
                        </Button>
                        <Label FontFamily="pack://application:,,,/data/#Cyber Alert" Content="Password:" Margin="-5,25,141,25" Grid.RowSpan="2" Grid.Row="1" FontSize="16" Foreground="#FF45A29E"/>
                        <Label FontFamily="pack://application:,,,/data/#Cyber Alert" Content="username:" Margin="-5,20,141,30" Grid.RowSpan="2" FontSize="16" Foreground="#FF45A29E"/>
                        <Label FontFamily="pack://application:,,,/data/#Cyber Alert" Content="Email:" Margin="-5,25,146,25" Grid.RowSpan="3" Grid.Row="2" FontSize="16" Foreground="#FF45A29E"/>
                        <TextBox FontFamily="pack://application:,,,/data/#Cyber Alert" x:Name="username" TextWrapping="Wrap" Text="" Margin="115,25,5,0" Height="25" Grid.ColumnSpan="2"/>
                        <TextBox FontFamily="pack://application:,,,/data/#Cyber Alert" x:Name="mail" TextWrapping="Wrap" Text="" Margin="115,25,5,0" Height="25" Grid.ColumnSpan="2" Grid.Row="2"/>
                        <PasswordBox x:Name="Password_field" Margin="115,25,5,0"
                            MaxLength="16" PasswordChanged="Password_field_PasswordChanged" Password="" Grid.ColumnSpan="2" Grid.Row="1"/>
                        <TextBlock x:Name="error"    HorizontalAlignment="Left" TextWrapping="Wrap" Margin="10,10,0,10" Grid.Row="3" Width="345" Grid.ColumnSpan="2" Grid.RowSpan="2"
                                   Foreground="Red" />
                    </Grid>
                </StackPanel>
            </Border>
        </Grid>
    </Viewbox>
</Page>
