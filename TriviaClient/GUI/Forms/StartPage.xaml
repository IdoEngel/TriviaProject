<Page x:Class="GUI.Forms.StartPage"
      xmlns:controls="clr-namespace:GUI.Controls"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:GUI.Forms"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="StartPage" Background="#0B0C10"
      >


    <Viewbox>


        <Grid Height="450" Width="800">
            <!-- <controls:CyberFrame / -->

            <!-- Glow effect -->
            <Grid.Effect>
                <DropShadowEffect Color="#00FFFF" BlurRadius="30" ShadowDepth="0"/>
            </Grid.Effect>

            <!-- Centered content -->
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" >
                <!-- Logo Text -->
                <TextBlock Text="MagshiTrivia"
                    FontSize="80"
                    FontWeight="Bold"
                    Foreground="#00FFFF"
                    FontFamily="pack://application:,,,/data/#Cyber Alert"
                    HorizontalAlignment="Center" />



                <!-- Play Button -->
                <Button x:Name="PlayBtn"
                    Content="▶ PLAY"
                    Width="200"
                    Height="60"
                    FontFamily="pack://application:,,,/data/#Cyber Alert"
                    FontSize="24"
                    FontWeight="Bold"
                    Background="#FF2F7C"
                    Foreground="AntiqueWhite"
                    Cursor="Hand"
                    BorderThickness="0"
                    
                    Click="PlayBtn_Click"
                    
                    Padding="10">
                    <Button.Style>
                        <Style TargetType="{x:Type Button}">
                            <Setter Property="Background" Value="#FF2F7C"/>
                            <Setter Property="Foreground" Value="White"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="{x:Type Button}">
                                        <Border Background="{TemplateBinding Background}" 
                                            CornerRadius="15">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#00FFFF"/>
                                    <Setter Property="Foreground" Value="#0D0D0D"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </StackPanel>
            
            

            <!-- CYBERPUNK FRAME WITHOUT CANVAS -->
            <Grid>
                <!-- Main white outline frame using Path -->
                <Path x:Name="Demo" Stroke="White"
                    StrokeThickness="6"
                    Stretch="Fill"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch"
                    Margin="10"
                    Data="M 20,20 L 780,20 L 780,40 L 800,40 L 800,460 L 750,460 L 730,480 L 20,480 L 20,450 L 0,430 L 0,20 Z"/>

                <!-- Top-right dots -->
                <StackPanel Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Top"
                    Margin="0,10,30,0"
                >
                    <Ellipse Fill="White" Width="5" Height="5"/>
                    <Ellipse Fill="White" Width="5" Height="5"/>
                    <Ellipse Fill="White" Width="5" Height="5"/>
                </StackPanel>

                <!-- Bottom-left squares -->
                <StackPanel Orientation="Horizontal"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Bottom"
                    Margin="50,0,0,20"
                >
                    <Rectangle Fill="White" Width="10" Height="10"/>
                    <Rectangle Fill="White" Width="10" Height="10"/>
                    <Rectangle Fill="White" Width="10" Height="10"/>
                </StackPanel>
            </Grid>

        </Grid>
    </Viewbox>
</Page>
